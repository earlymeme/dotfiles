[user]
	name = Birunthan Mohanathas
	email = birunthan@mohanathas.com

[alias]
	a = add
	ap = add -p
	br = branch
	c = commit
	ca = commit --amend --no-edit
	cae = commit --amend
	cm = commit -m
	co = checkout
	d = diff
	dc = diff --cached
	ds = diff --stat
	h = show
	lg = log --format='%C(yellow)%h%Creset %Cgreen%cr%Creset %s (%an)%C(yellow)%d%Creset'
	p = pull -r
	plu = pull upstream master
	pso = push origin master
	rc = rebase --continue
	ri = rebase -i
	rh = reset HEAD
	s = status -s --ignore-submodules

[color]
	ui = true

[commit]
  status = false

[core]
	excludesfile = ~/.gitignore

[push]
	default = current

[include]
	path = ~/.gitconfig.local
